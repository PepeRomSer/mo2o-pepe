<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    
        {% block header %}
            {% include '_header.html.twig' %}
        {% endblock %}

        <div class="main container">
        {% block body %}
        
		    <div class="container contact">
            
                <div class="row">
                    <div class="col-md-4"> 
                        <form action="{{ path("search_beer") }}" method="post" class="text-start">
                            <label >Busqueda por Food: </label>         
                            <input type=text name="txt_food" id="txt_food"  class="form-control" ></input>
                            <button type="submit" class="btn btn-bibliotech"> Buscar </button> 
                        </form>
                    </div>
                    <div class="col-md-4"> 
                        <form action="{{ path("get_beer") }}" method="post" class="text-start">
                            <label >Busqueda por ID: </label>         
                            <input type=text name="txt_id" id="txt_id"  class="form-control" ></input>
                            <button type="submit" class="btn btn-bibliotech"> Buscar </button> 
                        </form>
                    </div>
                </div>

            </div>
        
        {% endblock %}
        </div>

        {% block footer %}
            {% include '_footer.html.twig' %}
        {% endblock %}

    </body>
</html>
