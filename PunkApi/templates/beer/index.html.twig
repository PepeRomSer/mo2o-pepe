{% extends 'base.html.twig' %}
{% block body %}
    <div class="text-center pt-5 pb-5">
        <h2> Busqueda de cerveza</h2>
        <table class="table table-striped mt-3">
            <thead class="table-dark">
                <th>#</th>
                <th>name</th>
                <th>tagline</th>
                <th>first_brewed</th>
                <th>description</th>
                <th>image</th>
                <th>food</th>
            </thead>
            <tbody>
            {% for beer in beers %}
                <tr>
                    <td>{{ beer.id }}</td>
                    <td>{{ beer.name }}</td>
                    <td>{{ beer.tagline }}</td>
                    <td>{{ beer.first_brewed }}</td>
                    <td>{{ beer.description }}</td>
                    <td><img src="{{ beer.image_url }}" alt="{{ beer.name }}" width="100" height="100"></td>
                    <td>
                        {% for food in beer.food_pairing %}
                            <p>{{ food }}</p>
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if msg %}
            <div class="alert alert-danger mt-3" role="alert">
                {{ msg }}
            </div>
        {% endif %}

    </div>
{% endblock %}